@model Hinet.Web.Models.ViewTaiLieuTienCapQuyenVM
@{
    var contentfile = "";
    var screen50 = "";
    if (Model.type == 1)
    {
        screen50 = "screen50";
    }
}
<div class="modal-dialog @screen50" role="document" style="width: 80%">
    <div class="modal-content">
        <div class="modal-header">
            @*<button type="button" class="close" onclick="CloseModalPreview()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>*@
            <button type="button" class="close" data-dismiss="modal">&times;</button>

            <h4 style="font-weight: bold; text-transform: uppercase;" class="modal-title" id="myModalLabel">
                THÔNG TIN TÀI LIỆU
            </h4>
        </div>
        <div class="modal-body" style="height:850px;">
            <div style="width:100%;overflow:hidden;height:720px">
                @if (Model.Attachment == null)
                {
                <div style="color: red;text-align:center; text-transform: uppercase; font-weight: bold">
                    Tài liệu này không tồn tại trong hệ thống
                </div>
                }
                else if (Model.IsImage == true)
                {
                <img src="@Model.FullPath" width="100%" height="100%" />
                }
                else if (Model.CanShowPDF == true)
                {
                <embed src="@Model.FullPath" type="application/pdf" width="100%" height="100%">
                }
                else
                {
                <div style="color: red;text-align:center; text-transform: uppercase; font-weight: bold">
                    Tài liệu này không hỗ trợ bản xem trước
                </div>
                }
            </div>
        </div>

        <div class="modal-footer center">
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".screen50").parent().addClass("viewdoc_right");
    })
</script>
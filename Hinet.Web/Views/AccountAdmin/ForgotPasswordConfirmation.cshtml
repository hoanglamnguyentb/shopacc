@using System.Web.Configuration
@{
    ViewBag.Title = "ThankYou";
    Layout = null;
    var header1 = WebConfigurationManager.AppSettings["Login_Header1"];
    var header2 = WebConfigurationManager.AppSettings["Login_Header2"];

    var msg = TempData["Msg"];
}
@*@Html.Partial("_QuyTrinhNghiepVuPartial")*@

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/Custom/login.css" />
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div id="main-page">
        <div id="header-login">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <h1 class="sitename">
                            @header1
                        </h1>
                        <h2 class="sitesoft namesoft">
                            @header2
                        </h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 pd-0" id="form-login">
            <div class="container" style="margin-bottom: 50px;">
                <div style="display: block;width: 100%;padding: 100px;border-bottom: 2px solid #0072ce;border-radius: 20px;">
                    <h1 style="text-align: center;font-size: 50px;color: #005494;">Gửi email lấy lại mật khẩu thành công!</h1>
                </div>

                <img src="~/assets/images/email.png" style="display: block;margin: 0 auto;width: 130px;margin-top: -70px;background-color: #ffffff;" />
                <p style="font-size: 20px; text-align:center;">Chúng tôi đã gửi email lấy lại mật khẩu, vui lòng kiểm tra email để biết thêm thông tin chi tiết.</p>
            </div>
        </div>
    </div>
</body>
</html>
<script type="text/javascript">
$(document).ready(function () {
    if ('@msg' == '1') {
        NotiSuccess("Thành công", "Bạn đã gửi phản ánh thành công!");
    }
})
</script>
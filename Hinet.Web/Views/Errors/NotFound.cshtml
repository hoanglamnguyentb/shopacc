@{
    ViewBag.Title = "Không tìm thấy trang";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
}

<style>

    .main-container:before {
        background: unset;
    }

    .alert-content {
        width: 60%;
        margin: 100px auto;
        background: #fff !important;
        padding: 30px 0;
        height: 50vh;
    }

    .sitetitle {
        text-align: center;
    }

        .sitetitle h1, .content-err h1 {
            text-transform: uppercase;
            color: #e00000 !important;
            font-size: 28px;
            font-weight: bold;
        }

        .sitetitle h2, .contentbox-err h3 {
            line-height: 1.6;
            font-size: 20px;
        }

    .comeback {
        float: left;
        width: 100%;
        text-align: left;
        margin-top: 30px;
    }

        .comeback a {
            border-radius: 20px;
        }

    .contentbox-err h3 {
        padding-right: 80px;
    }

    .contentbox-err {
        height: 100%;
        padding-left: 30px;
    }
</style>

<div class="alert-content">
    <div class="col-sm-5 sitetitle">
        <div class="qhieu">
            <img src="~/Content/EndUser/img/error-404.png" height="180px" style="" alt="">
        </div>
        <div class="box-sitename">
        </div>
    </div>
    <div class="row col-sm-7 contentbox-err">
        <!-- PAGE CONTENT BEGINS -->

        <div class="error1">
            <div class="content-err">
                <h1 class="grey lighter smaller">
                    Có lỗi xảy ra!
                </h1>
                <h3 class="lighter smaller">Rất tiếc hệ thống không tìm thấy trang web!</h3>
            </div>
        </div>

        <div class=" comeback">
            <a href="/" class="btn btn-primary btn-sm">
                Trở về trang chủ
            </a>
        </div>
        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.row -->
</div><!-- /.row -->
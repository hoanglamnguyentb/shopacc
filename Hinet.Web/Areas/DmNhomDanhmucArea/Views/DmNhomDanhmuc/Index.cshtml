                        result += "<a style='margin-right:5px;' class='btn btn-danger btn-sm' href='javascript:void(0)' onclick='DeleteAction(\"/DmNhomDanhmucArea/DmNhomDanhmuc/Delete/" + data.Id + "\")'  title = 'Xóa'><i class=' bi bi-x-lg action-icon'> </i>Xoá</a>";
                        result += "</div>";
                        return result;
                    }
                },
            ];

            var getdatafunc=function(page,sortQuery,pageSize){
                $.ajax({
                    url: '/DmNhomDanhmucArea/DmNhomDanhmuc/GetData',
                    type: 'post',
                    cache: false,
                    data:{"indexPage":page,"sortQuery":sortQuery,"pageSize":pageSize},
                    success: function (data) {
                        $(moduleTableSelector).hinetTable("data",{
                            pageSize:pageSize!=-1?pageSize:data.Count,
                            pageIndex:page,
                            pagecount: data.TotalPage,
                            recordCount: data.Count,
                            listItem: data.ListItem,});
                    },

<div id="tbl-user" class="hntbl-cover table-scroll">
    <div class="table-wrap">
        <table class="hinet-table table table-striped table-hover fixed-table" cellspacing="0" width="100%">
            <thead>
                <tr>

                    <th class="fixed-side">#</th>
                    <th>Họ tên</th>

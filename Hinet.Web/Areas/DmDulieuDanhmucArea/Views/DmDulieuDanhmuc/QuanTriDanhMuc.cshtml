}
@Html.Partial("_SearchQuanTriDanhMucPartial")

<div id="tbl-DM_DulieuDanhmuc" class="hntbl-cover">
    <div class="hntbl-cover-tableScroll">
        <table class="hinet-table table table-striped table-hover" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th style="width:3%">STT</th>
                    <th style="width:20%">Nhóm quản trị danh mục</th>
                    <th style="width:20%">Tên</th>
                    <th style="width:10%">Mã</th>
                    <th style="width:10%">Thứ tự hiển thị</th>
                    <th style="width:22%">Ghi chú</th>
                    <th style="width:17%">Thao tác</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
@section scripts{
    <script>
        var lstData = eval(@lstData);
        var moduleTableSelector="#tbl-DM_DulieuDanhmuc";
        function pagefunction(){
            var conf = [
                {
                    tdClass: "center",
                    isSort: false,
                    isCounter: true,
                    nameModel: "",
                    content: function (data) {
                        return "<input type='checkbox' />"
                    }
                },
                {
                    isSort: true,
                    nameModel: 'Name',
                    content: function (data) {
                        return data.TenNhomDuLieu
                    }
                },
                {
                    isSort: true,
                    nameModel: 'Name',
                    content: function (data) {
                        return data.Name
                    }
                },
                {
                    isSort: true,
                    nameModel: 'Code',
                    content: function (data) {
                        return data.Code
                    }
                },
                {
                    isSort: true,
                    nameModel: 'Priority',
                    content: function (data) {
                        return data.Priority
                    }
                },
                {
                    isSort: false,
                    nameModel: 'Note',
                    content: function (data) {
                        return data.Note
                    }
                },
                {
                    isSort: false,
                    nameModel: "",
                    tdClass: "",
                    content: function (data) {
                        var result = "<div class='btn-group' style='display:flex; justify-content:center;'>";
                        result += "<a style='margin-right:5px;' class='btn btn-primary btn-sm' href='javascript:void(0)' onclick='EditAction(\"/DmDulieuDanhmucArea/DmDulieuDanhmuc/Edit/" + data.Id + "\")'   title = 'Chỉnh sửa'><i class='bi bi-pencil-square action-icon'></i>Chỉnh sửa</a>";
                        result += "<a class='btn btn-danger btn-sm' href='javascript:void(0)' onclick='DeleteAction(\"/DmDulieuDanhmucArea/DmDulieuDanhmuc/Delete/" + data.Id + "\")'  title = 'Xóa'><i class=' bi bi-x-lg action-icon'></i>Xoá</a>";
                        result += "</div>";
                        return result;
                    }
                },
            ];

            var getdatafunc=function(page,sortQuery,pageSize){
                $.ajax({
                    url: '/DmDulieuDanhmucArea/DmDulieuDanhmuc/GetData_QuanTri',
                    type: 'post',
                    cache: false,
                    data: { "indexPage": page, "sortQuery": sortQuery, "pageSize": pageSize},
                    success: function (data) {
                        $(moduleTableSelector).hinetTable("data",{
                            pageSize:pageSize!=-1?pageSize:data.Count,
                            pageIndex:page,
                            pagecount: data.TotalPage,
                            recordCount: data.Count,
                            listItem: data.ListItem,});
                    },
                    error: function (err) {
                        CommonJS.alert(xhr.responseText);
                    }
                });

            }

            var tblData = $(moduleTableSelector).hinetTable("init",{
                pageSizeList: {
                    size: [10,20, 50, 100, -1], label: ['10','20','50','100','Tất cả']},
                pagecount: @Model.TotalPage,
                recordCount: @Model.Count,
                getData:getdatafunc,
                listItem:lstData,
                config: conf,
                showCheckBox: false
            });

        }

        function AfterSussessActionAjaxform(){
            $(moduleTableSelector).hinetTable("reload");
        }
        function AjaxSearchSuccess(rs) {
            $(moduleTableSelector).hinetTable("data", {
                pageIndex: 1,
                pagecount: rs.TotalPage,
                recordCount: rs.Count,
                listItem: rs.ListItem,
            });
        }
        pagefunction();
    </script>
}
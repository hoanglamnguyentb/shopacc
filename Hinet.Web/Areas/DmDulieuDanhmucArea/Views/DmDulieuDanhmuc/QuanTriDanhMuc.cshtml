@using Hinet.Service.Common;
@using Hinet.Service.DM_DulieuDanhmucService.DTO;
@model PageListResultBO<DM_QuanTri_DulieuDanhmucDTO>
@{
    var lstData = Html.Raw(JsonConvert.SerializeObject(Model.ListItem));
}

<style>
    .action-icon {
        margin-right: 5px;
    }

    .toUpper {

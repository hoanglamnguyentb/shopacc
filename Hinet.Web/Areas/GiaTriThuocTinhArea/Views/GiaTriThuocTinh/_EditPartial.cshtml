@using Hinet.Model.IdentityEntities
@using Hinet.Model.IdentityEntities
@using Hinet.Web.Areas.GiaTriThuocTinhArea.Models

@model EditVM
@{ 

}
<div class="modal-dialog">
    @using (Ajax.BeginForm("Edit", "GiaTriThuocTinh", new { @area = "GiaTriThuocTinhArea" }, new AjaxOptions()
    {
        HttpMethod = "POST",
        OnFailure = "AjaxFormError",
        OnSuccess = "AjaxFormSuccess",
    }, new { id = "editGiaTriThuocTinhForm" }))
    {
        @Html.AntiForgeryToken()
        //HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
    <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <div class="center">
                    <h4 class="modal-title">Cập nhật </h4>
                </div>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
 			@Html.HiddenFor(x=>x.Id)
				<div class="form-group">
				<label class="control-label col-sm-4">Tài khoản <span class="red">*</span></label>
				<div class="col-sm-8">
				@Html.TextBoxFor(m => m.TaiKhoanId, new { @class = "form-control" })
				@Html.ValidationMessageFor(m => m.TaiKhoanId, "", new { @class = "text-danger" })
				</div>
				</div>
				<div class="form-group">
				<label class="control-label col-sm-4">Thuộc tính </label>
				<div class="col-sm-8">
				@Html.TextBoxFor(m => m.ThuocTinhId, new { @class = "form-control" })
				@Html.ValidationMessageFor(m => m.ThuocTinhId, "", new { @class = "text-danger" })
				</div>
				</div>
				<div class="form-group">
				<label class="control-label col-sm-4">Tên thuộc tính </label>
				<div class="col-sm-8">
				@Html.TextBoxFor(m => m.ThuocTinhTxt, new { @class = "form-control" })
				@Html.ValidationMessageFor(m => m.ThuocTinhTxt, "", new { @class = "text-danger" })
				</div>
				</div>
				<div class="form-group">
				<label class="control-label col-sm-4">Giá trị </label>
				<div class="col-sm-8">
				@Html.TextBoxFor(m => m.GiaTri, new { @class = "form-control" })
				@Html.ValidationMessageFor(m => m.GiaTri, "", new { @class = "text-danger" })
				</div>
				</div>
				<div class="form-group">
				<label class="control-label col-sm-4">Giá trị thật </label>
				<div class="col-sm-8">
				@Html.TextBoxFor(m => m.GiaTriText, new { @class = "form-control" })
				@Html.ValidationMessageFor(m => m.GiaTriText, "", new { @class = "text-danger" })
				</div>
				</div>

 

                </div>
            </div>
            <div class="modal-footer center">
                <button type="submit" class="btn btn-primary">Hoàn thành</button>

                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    }
</div>
<script>

</script>
@Scripts.Render("~/bundles/jqueryval")

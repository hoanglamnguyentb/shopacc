@using Hinet.Model.IdentityEntities
@using Hinet.Model.Entities
@using Hinet.Web.Areas.ThuocTinhArea.Models

@model CreateVM
@{
	var dropdownListKieuDuLieu = ViewBag.dropdownListKieuDuLieu as List<SelectListItem>;
	var dropdownListDmNhomDanhmuc = ViewBag.dropdownListDmNhomDanhmuc as List<SelectListItem>;

}

<div class="modal-dialog">
    @using (Ajax.BeginForm("Create", "ThuocTinh", new { @area = "ThuocTinhArea" }, new AjaxOptions()
    {
        HttpMethod = "POST",
        OnFailure = "AjaxFormError",
        OnSuccess = "AjaxFormSuccess",
    }, new { id = "createThuocTinhForm" }))
    {
        @Html.AntiForgeryToken()
        //HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <div class="center">
                    <h4 class="modal-title">Tạo mới </h4>
                </div>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
				<div class="form-group">
				<label class="control-label col-sm-4">GameId <span class="red">*</span></label>
				<div class="col-sm-8">
				@Html.TextBoxFor(m => m.GameId, new { @class = "form-control" })
				@Html.ValidationMessageFor(m => m.GameId, "", new { @class = "text-danger" })
				</div>
				</div>
				<div class="form-group">
				<label class="control-label col-sm-4">Tên thuộc tính </label>
				<div class="col-sm-8">
				@Html.TextBoxFor(m => m.TenThuocTinh, new { @class = "form-control" })
				@Html.ValidationMessageFor(m => m.TenThuocTinh, "", new { @class = "text-danger" })
				</div>
				</div>
				<div class="form-group">
				<label class="control-label col-sm-4">Kiểu dữ liệu </label>
				<div class="col-sm-8">
				@Html.DropDownListFor(m => m.KieuDuLieu,dropdownListKieuDuLieu, new { @class="form-control"})
				@Html.ValidationMessageFor(m => m.KieuDuLieu, "", new { @class = "text-danger" })
				</div>
				</div>
				<div class="form-group">
				<label class="control-label col-sm-4">Nhóm danh mục </label>
				<div class="col-sm-8">
				@Html.DropDownListFor(m => m.DmNhomDanhmuc,dropdownListDmNhomDanhmuc, new { @class="form-control"})
				@Html.ValidationMessageFor(m => m.DmNhomDanhmuc, "", new { @class = "text-danger" })
				</div>
				</div>

                </div>
            </div>
            <div class="modal-footer center">
                <button type="submit" class="btn btn-primary">Hoàn thành</button>

                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    }
</div>

<script>

	$("#KieuDuLieu").select2();
	$("#DmNhomDanhmuc").select2();



</script>
@Scripts.Render("~/bundles/jqueryval")

@{
    ViewBag.Title = "ConfigRequest";
    Layout = "~/Views/Shared/_LayoutAce.cshtml";
    ViewBag.ModuleName = "Quản lý ConfigRequest";
    ViewBag.PageName = "Danh sách ConfigRequest";
    ViewBag.ModuleCode = "ConfigRequest_index";

}
@using Hinet.Model.IdentityEntities;
@using Hinet.Model.Entities;
@using Newtonsoft.Json;
@using Hinet.Service.Common;
@using Hinet.Service.ConfigRequestService.Dto;
@model PageListResultBO<ConfigRequestDto>
@{
    var lstData = Html.Raw(JsonConvert.SerializeObject(Model.ListItem));
}

@section ActionBarRight{
    <a href="#collapseDiv" class="btn btn-sm btn-primary" aria-controls="collapsePanel" data-toggle="collapse" role="button">
        <i class="bi bi-search"></i> Tìm kiếm
    </a>
    <a href="/ConfigRequestArea/ConfigRequest/Import" class="btn btn-primary btn-sm"><i class="fa fa-upload"></i> Import</a>
    <a href="javascript:void(0)" onclick="CreateAction('/ConfigRequestArea/ConfigRequest/Create')" class="btn btn-primary btn-sm"><i class="bi bi-plus-lg"></i> Thêm mới</a>
}
@Html.Partial("_SearchPartial")

<div id="tbl-ConfigRequest" class="hntbl-cover table-scroll">
    <div class="table-wrap">
        <table class="hinet-table table table-striped table-hover" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="fixed-side"></th>
                    <th class="fixed-side">#</th>

                    <th class="fixed-side">Thao tác</th>
                    <th>Mã</th>
                    <th>Tên Bảng</th>
                    <th>Tên các trường</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@section scripts{
    <script>
        var lstData = eval(@lstData);
        var moduleTableSelector="#tbl-ConfigRequest";
        function pagefunction(){
            var conf=[
                {
                    tdClass:"center width50 fixed-side",
                    isSort:false,
                    nameModel: "",
                    isCounter:true,
                    content: function (data) {
                        return "<input type='checkbox' />"
                    }
                },

                   {
                       isSort:false,
                       nameModel:"",
                       tdClass:"center fixed-side",
                       content: function (data) {
                           var result = `<div class="btn-group">
                               <button data-toggle="dropdown" class="btn btn-xs btn-primary btn-white dropdown-toggle" aria-expanded="false">Thao tác<i class="ace-icon fa fa-angle-down icon-on-right"></i>
                               </button>

                               <ul class="dropdown-menu">`;

result += "<li><a href='/ConfigRequestArea/ConfigRequest/Detail/" + data.Id + "'   title = 'Chi tiết'><i class='fa fa-info-circle'> </i> Thông tin chi tiết</a> </li>";

result += "<li><a href='javascript:void(0)' onclick='EditAction(\"/ConfigRequestArea/ConfigRequest/Edit/" + data.Id + "\")'   title = 'Chỉnh sửa'><i class='glyphicon glyphicon-edit'> </i> Sửa thông tin</a> </li>";
                           result += "<li><a href='javascript:void(0)' onclick='DeleteAction(\"/ConfigRequestArea/ConfigRequest/Delete/" + data.Id + "\")'  title = 'Xóa'><i class=' glyphicon glyphicon-remove' style='color:red'> </i> Xóa</a></li>";
                           result += "</ul></div>";
                           return result;
                       }
                   },
				{
					isSort:true,
					nameModel:'Code',
					content: function (data) {
					return data.Code
				}
				},
				{
					isSort:true,
					nameModel:'Name',
					content: function (data) {
					return data.Name
				}
				},
				{
					isSort:true,
					nameModel:'AccessInfor',
					content: function (data) {
					return data.AccessInfor
				}
				},

            ];

            var getdatafunc=function(page,sortQuery,pageSize){
                $.ajax({
                    url: '/ConfigRequestArea/ConfigRequest/getData',
                    type: 'post',
                    cache: false,
                    data:{"indexPage":page,"sortQuery":sortQuery,"pageSize":pageSize},
                    success: function (data) {
                        $(moduleTableSelector).hinetTable("data",{
                            pageSize:pageSize!=-1?pageSize:data.Count,
                            pageIndex:page,
                            pagecount: data.TotalPage,
                            recordCount: data.Count,
                            listItem: data.ListItem,});
                    },
                    error: function (err) {
                        CommonJS.alert(xhr.responseText);
                    }
                });

            }

            var tblData=$("#tbl-ConfigRequest").hinetTable("init",{
                pageSizeList:{size:[20,50,100,-1],label:['20','50','100','Tất cả']},
                pagecount: @Model.TotalPage,
                recordCount: @Model.Count,
                actionToolBar:'<a href=\"#collapseDiv\" aria-controls=\"collapsePanel\" data-toggle=\"collapse\" role=\"button\" class="btn btn-primary btn-xs"><i class="bi bi-search"></i> Tìm kiếm</a>',
                getData:getdatafunc,
                listItem:lstData,
                config:conf
            });

        }

        function AfterSussessActionAjaxform(){
            $(moduleTableSelector).hinetTable("reload");
        }
        function AjaxSearchSuccess(rs) {
            $(moduleTableSelector).hinetTable("data", {
                pageIndex: 1,
                pagecount: rs.TotalPage,
                recordCount: rs.Count,
                listItem: rs.ListItem,
            });
        }
        pagefunction();
    </script>
}